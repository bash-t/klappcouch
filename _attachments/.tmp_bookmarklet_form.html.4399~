<html>
<head>
	<script type="text/javascript" src="jquery.js"></script>
	<script type="text/javascript">
		$.extend({
		  getEncodedUrlVars: function(){
		    var params = {}, hash;
			var hashes = unescape(window.location.href.slice(window.location.href.indexOf('?') + 1)).split('&');
			for(var i = 0; i < hashes.length; i++)
		    {
		  		hash = hashes[i].split('=');
		  		params[hash[0]] = hash[1];
		    }
		    return params;
		  }
		});
		
		prepareRequestCallback = function (p_data) {
			response = jQuery.parseJSON(p_data);
			$.ajax({
				url:  "_update/createOrAddBM/" + response.id,
				type: "POST",
				data: response,
			    success: function(data) {
					response = jQuery.parseJSON(data);
					if (response.status == "new") {
						$("#success").css("background-color", "#00FF33");
						if (response.type == "bookmark") {
							$("#success").html("Bookmark der Seite <b>" + response.title + "</b><br>für den User <b>" + response.submitter + "</b> angelegt!");
						}
						else {
							$("#success").html("Download Ticket der Seite <b>" + response.title + "</b><br>für den User <b>" + response.submitter + "</b> angelegt!");
						}
					}
					else if (response.status == "alreadySubscribed") {
						$("#success").css("background-color", "#00CCFF");
						if (response.type == "bookmark") {
							$("#success").html("Bookmark für den User <b>" + response.submitter + "</b> wurde bereits angelegt.");
						}
						else {
							$("#success").html("Download Ticket für den User <b>" + response.submitter + "</b> wurde bereits angelegt.");
						}	
					}
					else if (response.status == "subscribed") {
						$("#success").css("background-color", "#00FF33");
						if (response.type == "bookmark") {
							$("#success").html("Bookmark bereits vorhanden. User <b>" + response.submitter + "</b> hinzugefügt.");
						}
						else {
							$("#success").html("Download Ticket bereits vorhanden. User <b>" + response.submitter + "</b> hinzugefügt.");
						}	
					}
					$("#success").slideDown("slow");
					setTimeout(function(){
						$("#success").slideUp("slow");
					}, 5000);
			    }
			});
		}
		
		//call to get the (generated) id
		$.ajax({
		    url:  "_show/prepareRequest/" + $.getEncodedUrlVars().hostname,
			type: "GET",
			data: $.getEncodedUrlVars(),
		    success: prepareRequestCallback
		});
	</script>
<title></title>	
</head>
<body style="margin:0px; padding:0px;">
	<div id="success" name="success" style="display:none; background:limegreen; margin:0px width:770px; height:60px;"></div>
</body>
</html>